{
  "name": "HK Private Video Encoder Bot",
  "description": "A Telegram bot to encode and compress videos using FFmpeg with x264/x265 codec support",
  "repository": "https://github.com/itskrishname/hk-pvt-encoder",
  "logo": "https://telegra.ph/file/4e03c75840f3d69615aea.png",
  "keywords": [
    "telegram",
    "bot",
    "video",
    "encoder",
    "ffmpeg",
    "python",
    "compression"
  ],
  "website": "https://github.com/itskrishname/hk-pvt-encoder",
  "success_url": "/",
  "env": {
    "API_ID": {
      "description": "Get this value from https://my.telegram.org",
      "required": true,
      "value": ""
    },
    "API_HASH": {
      "description": "Get this value from https://my.telegram.org",
      "required": true,
      "value": ""
    },
    "BOT_TOKEN": {
      "description": "Get this from @BotFather on Telegram",
      "required": true,
      "value": ""
    },
    "OWNER_ID": {
      "description": "Your Telegram user ID (get from @userinfobot)",
      "required": true,
      "value": ""
    },
    "DATABASE_URL": {
      "description": "MongoDB database URL (leave blank if using MongoDB addon)",
      "required": false,
      "value": ""
    },
    "LOG_CHANNEL": {
      "description": "Telegram channel ID for logging (format: -100xxxxxxxxxx)",
      "required": false,
      "value": ""
    },
    "DOWNLOAD_DIR": {
      "description": "Directory path for temporary downloads",
      "required": false,
      "value": "./downloads"
    },
    "ENCODE_DIR": {
      "description": "Directory path for encoded videos",
      "required": false,
      "value": "./encodes"
    },
    "FFMPEG_PRESET": {
      "description": "FFmpeg encoding preset (ultrafast, superfast, veryfast, faster, fast, medium, slow, slower, veryslow)",
      "required": false,
      "value": "medium"
    },
    "VIDEO_CODEC": {
      "description": "Video codec to use (libx264 or libx265)",
      "required": false,
      "value": "libx264"
    },
    "CRF_VALUE": {
      "description": "Constant Rate Factor for encoding quality (18-28, lower is better quality)",
      "required": false,
      "value": "23"
    },
    "AUDIO_CODEC": {
      "description": "Audio codec to use (aac, libopus, copy)",
      "required": false,
      "value": "aac"
    },
    "AUDIO_BITRATE": {
      "description": "Audio bitrate (e.g., 128k, 192k, 256k)",
      "required": false,
      "value": "128k"
    },
    "RESOLUTION": {
      "description": "Output resolution (e.g., 1920x1080, 1280x720, 854x480)",
      "required": false,
      "value": ""
    },
    "WATERMARK_TEXT": {
      "description": "Watermark text to add to encoded videos (leave blank for no watermark)",
      "required": false,
      "value": ""
    },
    "MAX_FILE_SIZE": {
      "description": "Maximum file size in MB for uploads (Telegram limit: 2000MB for bots)",
      "required": false,
      "value": "2000"
    },
    "WORKERS": {
      "description": "Number of concurrent worker threads",
      "required": false,
      "value": "4"
    },
    "TZ": {
      "description": "Timezone for the bot",
      "required": false,
      "value": "Asia/Kolkata"
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    }
  ],
  "addons": [
    {
      "plan": "heroku-postgresql:essential-0",
      "as": "DATABASE"
    }
  ],
  "stack": "heroku-22"
}
